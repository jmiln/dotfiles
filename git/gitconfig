[include]
    path = ~/.gitconfig.local
[core]
    whitespace = -trailing-space,-indent-with-non-tab,-tab-in-indent
    editor = vim
[merge]
    tool = vimdiff
    conflictstyle = diff3
[difftool]
    prompt = false
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = blue bold
    frag = yellow bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    deleted = black red
    untracked = red
[commit]
	verbose = true
[credential]
	helper = cache
