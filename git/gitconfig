[include]
    path = ~/.gitconfig.local
[core]
    whitespace = -trailing-space,-indent-with-non-tab,-tab-in-indent
    editor = nvim
    pager = delta
[delta]
    navigate = true
    dark = true
    line-numbers = true
[pager]
    diff = delta --line-numbers
    show = delta --line-numbers
[interactive]
    diffFilter = delta --color-only
[merge]
    tool = vimdiff
    conflictstyle = zdiff3
[diff]
    colorMoved = default
[difftool]
    prompt = false
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = blue bold
    frag = yellow bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    deleted = black red
    untracked = red
[commit]
	verbose = true
[credential]
	helper = store
